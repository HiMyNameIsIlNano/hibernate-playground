<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">
    <persistence-unit name="h2-dev" transaction-type="RESOURCE_LOCAL">
        <description>Integration Test In-Memory empty DB</description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test;"/>
            <property name="jakarta.persistence.jdbc.user" value="test"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.create-database-schemas" value="true"/>

            <!-- With H2 the schema is created and everything works as expected -->
            <!--<property name="hibernate.default_schema" value="DUMMY"/>-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!--<property name="log4j.logger.org.hibernate" value="info"/>
            <property name="log4j.logger.org.hibernate.SQL" value="debug"/>
            <property name="log4j.logger.org.hibernate.type.descriptor.sql" value="trace"/>-->
        </properties>
    </persistence-unit>
</persistence>